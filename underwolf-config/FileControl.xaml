<UserControl x:Class="underwolf_config.FileControl"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:underwolf_config"
             mc:Ignorable="d" 
             d:DesignHeight="20" 
             d:DesignWidth="600"
             Loaded="OnLoad"
             >
    <Grid>
        <CheckBox IsChecked="{Binding ElementName=Root, Path=Enabled}" VerticalContentAlignment="Center" Click="CheckBoxClicked"/>
        <TextBlock x:Name="TextBlock" Text="{Binding ElementName=Root, Path=FileName}" Foreground="White" HorizontalAlignment="Left" FontSize="16" Margin="24,0,0,0"/>
    </Grid>
</UserControl>
